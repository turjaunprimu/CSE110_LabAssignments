public class LabAssignment04
{
  public static void main(String[]args)
  {
   int i=24;
   
   while (i>=-6)
   {
     if (i==-6)
     {
       System.out.println(i);
     }

     else
     {
       System.out.print(i+ ",");
     }
    
     i=i-6;
   }
  }
}



